<html>
    <head>
        <meta charset= "UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link
            rel="stylesheet" 
            href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        >
        <link rel="stylesheet" href="/css/style.css">
        <title>Tech Blog Home Page</title>
        <script src="/javascript/main.js" defer></script>
        <script src="/javascript/logout.js" defer></script>
    </head>
    <body class="height-100 background">
        <section id="header-section" class="col-12 d-flex align-items-center flex-column pb-4">
            <section id="title-section" class="mt-5 m-2 py-1 px-2 bg-info rounded fit-content d-block">
                <h1>{{{pageTitle}}}</h1>
            </section>
            <section id="nav-section-container" class="fit-content justify-content-between">
                
                <section id="nav-section" class="d-block">
                    <nav class="navbar navbar-expand col-3 justify-content-between">
                        <a href="/" id="home-link" class="px-5 nav-text">Home</a>
                        <a href="/dashboard?cudPost=false" id="dashboard-link" class="nav-text">Dashboard</a>
                        {{#if loggedInUser}}
                            <a href="/api/users/logout" class="px-5 nav-text" id="login-logout-link">Logout</a>
                        {{else}}
                            <a href="/login" class="px-5 nav-text" id="login-logout-link">Login</a>
                        {{/if}}
                    </nav>
                </section>
            </section>
            
            {{#if loggedInUser}}
                <section id="welcome-bar" class="small-text">
                    <p id="welcome-line" class="d-block" data-user-id="{{{loggedInUserId}}}">Welcome, <b>{{{loggedInUser}}}</b></p>
                </section>
            {{/if}}
        </section>
        <main>
            {{{body}}}
        </main>
        <section class="d-flex col-12 justify-content-between">
            <p id="error-message" class="text-center text-danger">{{{invalidRedirectionMessage}}}</p>
        </section>
    </body>
</html>